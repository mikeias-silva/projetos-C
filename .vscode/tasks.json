{
  "tasks": [
      {
          "type": "shell",
          "label": "g++ build active file",
          "command": "/usr/bin/g++",
          "args": [
              "-g",
              "${workspaceFolder}/main.cpp",
              "${workspaceFolder}/src/*.cpp",
              "-I",
              "${workspaceFolder}/include",
              "-o",
              "${workspaceFolder}/*.cpp"
          ],
          "options": {
              "cwd": "/usr/bin"
          },
          "group": {
              "kind": "build",
              "isDefault": true
          }
      }
  ],
  "version": "2.0.0"
}